{
  "name": "san-copy-to-clipboard",
  "version": "0.0.1",
  "description": "Copy-to-clipboard San component",
  "main": "lib/index.js",
  "config": {
    "component": "CopyToClipboard"
  },
  "lint-staged": {
    "!(example|lib|build|__mocks__)/**/*.js": [
      "eslint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
    ],
    "rules": {
        "header-max-length": [
            2,
            "always",
            120
        ],
        "subject-case": [
            0,
            "always",
            "sentence-case"
        ]
    }
},
  "scripts": {
    "build": "rimraf dist && yarn dist && yarn min",
    "start": "yarn build && cross-env NODE_ENV=development webpack-dev-server --config scripts/webpack.dev.conf.js",
    "dist": "cross-env NODE_ENV=production webpack --config scripts/webpack.dist.conf.js",
    "min": "cross-env NODE_ENV=production webpack --config scripts/webpack.min.conf.js",
    "lib": "rimraf lib && ./node_modules/.bin/babel src --out-dir lib",
    "lint": "eslint --ignore-path .eslintignore ./"
  },
  "author": "zttonly",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "copy-to-clipboard": "^3.2.0"
  },
  "peerDependencies": {
    "san": "^3.7.8"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.6.0",
    "@babel/polyfill": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "@commitlint/cli": "^9.1.2",
    "@commitlint/core": "^9.1.2",
    "@commitlint/travis-cli": "^9.1.2",
    "@ecomfe/eslint-config": "^5.0.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.0.6",
    "cross-env": "^5.2.1",
    "css-loader": "^3.2.0",
    "eslint": "^7.8.1",
    "eslint-plugin-babel": "^5.3.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.3.0",
    "rimraf": "^3.0.0",
    "san": "^3.7.8",
    "san-loader": "^0.0.7",
    "style-loader": "^1.0.0",
    "url-loader": "^2.1.0",
    "webpack": "^4.40.2",
    "webpack-cli": "^3.3.8",
    "webpack-dev-server": "^3.8.0",
    "webpack-merge": "^4.2.2",
    "webpack-parallel-uglify-plugin": "^1.1.2"
  }
}
